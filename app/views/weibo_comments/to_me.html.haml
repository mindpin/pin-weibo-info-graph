- hbreadcrumb '首页', '/'
- hbreadcrumb "我收到的评论", '#'


#left-weibo-box
  =render 'weibo/parts/current_user_weibo_profile'

#right-weibo-box
  =render 'weibo/parts/navigation'

  =render 'weibo/parts/comments_menu'
  
  = link_to '刷新','/weibo_comments/refresh_to_me',:method => 'post'

  .page-weibo-comments
    - if !@received_comments.blank?
      .comments
        - @received_comments.each do |comment|
          .comment
            .text= comment.text
    - else
      本地没有我收到的评论数据
