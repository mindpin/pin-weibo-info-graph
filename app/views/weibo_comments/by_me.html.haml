- hbreadcrumb '首页', '/'
- hbreadcrumb "我发出的评论", '#'

.page-weibo-comments-query
  = form_tag '/weibo_comments/by_me', :method => 'get' do
    .field
      %label= "评论数量"
      = text_field_tag 'count', @count

    .field.submit
      %a.form-submit-button{:href=>'javascript:;'} 采集

.page-weibo-comments
  - if !@my_comments.blank?
    .comments
      - @my_comments.each do |comment|
        .comment
          .text= comment.text
  - else
    本地没有我的评论数据
